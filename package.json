{
  "name": "fast-node-logger",
  "version": "1.4.1",
  "description": "fast node logger base on pino",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/fast-node-logger.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "ts-node": "ts-node src/app.ts",
    "prepublishOnly": "tsc",
    "start": "nodemon --watch src -e ts --exec \"npm run ts-node\"",
    "start:docker": "nodemon -L --watch src -e ts --exec \"npm run ts-node\""
  },
  "keywords": [
    "node",
    "logger",
    "fast",
    "rotator",
    "pino"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.1",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@types/pino": "^6.0.1",
    "pino": "^6.2.1",
    "pino-pretty": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
