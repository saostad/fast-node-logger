{
  "name": "fast-node-logger",
  "version": "1.0.2",
  "description": "fast node logger",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/fast-node-logger.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "ts-node": "ts-node src/app.ts",
    "prepublishOnly": "tsc",
    "start": "nodemon --watch src -e ts --exec \"npm run ts-node\"",
    "start:docker": "nodemon -L --watch src -e ts --exec \"npm run ts-node\""
  },
  "keywords": [
    "node",
    "logger",
    "fast",
    "rotator",
    "pino"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/pino": "^5.15.3",
    "pino": "^5.16.0",
    "rimraf": "^3.0.0"
  }
}
