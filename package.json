{
  "name": "fast-node-logger",
  "version": "0.1.0",
  "description": "fast node logger",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/fast-node-logger.git"
  },
  "main": "./dist/app.js",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "ts-node": "ts-node src/app.ts",
    "commands": "npm run lint && npm run format && npm run ts-node",
    "monitor": "nodemon --watch src -e ts --exec \"npm run commands\"",
    "prepublish": "tsc",
    "start": "nodemon --watch src -e ts --exec \"npm run ts-node\"",
    "start:docker": "nodemon -L --watch src -e ts --exec \"npm run ts-node\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "node",
    "logger",
    "fast",
    "rotator",
    "pino"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/pino": "^5.8.13",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "pino": "^5.14.0",
    "rimraf": "^3.0.0"
  }
}
